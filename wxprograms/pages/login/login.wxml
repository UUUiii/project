<!--pages/login/login.wxml-->
<view class="title">
<text>用户登录</text>
</view>
<view class="kot"> 
<p>手机号:</p>
<input   type="number" bindinput="photoinput" placeholder="请输入手机号"  maxlength="11"/>
</view>
<view class="kot">
<p>用户密码:</p>
<input   type="text" bindinput="passwordinput" placeholder="请输入密码" />
</view>
<view class="btn">
<button open-type="getUserInfo" lang="zh-CN"
bindgetuserinfo="onGotUserInfo" >
登录
</button>
</view>
<view class="downtitle">
<span bindtap="rushto">新用户注册？</span>
<span bindtap="updatepass">忘记密码？</span>
</view>
