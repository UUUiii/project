/* pages/prodetail/prodetail.wxss */
swiper,swiper,image{
  width: 100vw;
  height: 80vw;
}
.title{
  margin:20rpx;
  height: 100rpx;
  border-bottom: 3rpx solid #cccccc;
}
.title .name{
  font-family: '宋体';
  font-size: 38rpx;
  font-weight: bolder;
  height: 50%;
  line-height: 50%;
}
.title .tprice{
  color: red;
}
.concent{
  margin-top: 10rpx;
  font-family: '宋体';
  font-size: 38rpx;
  font-weight: bolder;
  height: 60rpx;
  border-bottom: 10rpx solid #FFCC99;
}
.concent .contitle{
  background: #FFCC99;
  color: #fff;
  height:60rpx;
  line-height: 60rpx;
  margin-top: -10rpx;
  width: 180rpx;
  border-radius:12rpx;
  text-align: center;
  /* border:1rpx solid black */
}
.context{
  width: 700rpx;
  margin-left: 20rpx;
  min-height: 300rpx;
  /* border:1rpx solid black; */
  border-left:5rpx solid #cccccc;
  border-right:5rpx solid #cccccc;
}
.confont{
  height: auto;
  width: 100vw;
}
.conview{
  min-height: 500rpx;
}
.footer{
  height: 100rpx;
  width: 100vw;
  background: #eee;
  position: fixed;
  bottom: 0;
  align-items: center;
  display: flex;
  justify-content: space-between;
}
.collect{
  width: 30%;
  text-align: center;
}
.add{
  width: 50%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: white;
  font-family: '宋体';
  font-size: 28rpx;
  background: #FF9900;
}
.addshop{
  width: 30%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: white;
  font-family: '宋体';
  font-size: 28rpx;
  background: #FF9900;
}
.buy{
  width: 50%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: white;
  font-family: '宋体';
  font-size: 30rpx;
  font-weight: bolder;
  background: #FF0033;
}
.buyshop{
  width: 40%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: white;
  font-family: '宋体';
  font-size: 30rpx;
  font-weight: bolder;
  background: #FF0033;
}
.showlayer{
  width: 100vw;
  height: 140vh;
  position: absolute;
  background: rgba(0,0,0,0.3);
  /* position: fixed; */
  z-index: 9999;
  /* margin-top: -1600rpx; */
}
.showconcent{
  height: 70vh;
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 100vw;
  padding: 50rpx;
  box-sizing: border-box;
}
.showconcent image{
  width: 120rpx;
  height: 120rpx;
  left:30rpx;
  position: absolute;
  border:20rpx solid #fff;
  top:-50rpx;
  box-shadow: 10rpx 10rpx 10rpx #cccccc;
}
.showprice{
  position: relative;
  left: 230rpx;
  top: -20rpx;
  color: orange;
  font-size: 28rpx;
  font-weight: 800;
}
.showtypeed{
  position: relative;
  left: 220rpx;
  top: -10rpx;
  color: #cccccc;
  font-size: 28rpx;
  font-weight: 800;
}
.showtype{
  border-top:1rpx solid #cccccc;
  border-bottom: 1rpx solid #cccccc;
  height: 50vh;
  padding-top: 10rpx ;
}
.showtype text{
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 500;
  font-size: 35rpx;
}
.showspecification{
  display: flex;
  width: 100vw;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10rpx;
}
.showspecification view{
  border:1rpx solid gray;
  padding: 10rpx;
  margin: 10rpx;
  background: #cccccc;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
.showspecification view.active{
  border:1rpx solid #cccccc;
  color: white;
  padding: 10rpx;
  margin: 10rpx;
  background: red;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
/* 操作 */
.shownum{
  padding-top: 50rpx;
  margin-top:350rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #cccccc;
}
.shopuser{
  width: 25%;
  display: flex;
  height: 120rpx;
  line-height: 120rpx;
  justify-content: center;
  align-items: center;
  /* border:1rpx solid black; */
}
.shopuser text{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.shopminus{
background: #99CCFF;
border-radius: 50%;
}
.shopadd{
  background: #99CCFF;
  border-radius: 50%;
}

